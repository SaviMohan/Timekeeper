<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TimekeeperDisplayApp"
             x:Class="TimekeeperDisplayApp.OptionsPage"
             BackgroundColor="#000000"
             Title="Timekeeper Options">
  <ContentPage.Content>
      <StackLayout BackgroundColor="#d9d9d9">
        <Label Text="Options" FontAttributes="Bold" FontSize="32" TextColor="Black"></Label>
        <StackLayout x:Name="companySelecter" Orientation="Horizontal">
          <Label Text="Select Company" TextColor="Black" FontSize="20"></Label>
          <Picker x:Name="companyPicker"></Picker>
        </StackLayout>
      </StackLayout>
  </ContentPage.Content>
</ContentPage>