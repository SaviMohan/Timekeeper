<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TimekeeperDisplayApp"
             x:Class="TimekeeperDisplayApp.UsagePageTwo"
             BackgroundColor="#000000"
             Title="Timekeeper Usage">
  <ContentPage.Content>
    <StackLayout BackgroundColor="#d9d9d9">
      <Label x:Name="appName" TextColor="Black" FontSize="32" FontAttributes="Bold"></Label>
      <StackLayout x:Name="appLayout" Orientation="Horizontal">
        <Label Text="Select Classification: " TextColor="Black" FontSize="20" VerticalTextAlignment="Center"></Label>
        <Picker x:Name="classPicker" SelectedIndexChanged="OnPickerChanged"></Picker>
      </StackLayout>
      <Button Text="Back" Clicked="OnButtonClicked" BorderColor="Black" TextColor="Black" FontSize="20" ></Button>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>